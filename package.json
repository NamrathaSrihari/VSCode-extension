{
  "name": "gitCommitFun",
  "displayName": "gitCommitFun",
  "description": "Fun animations for git commit",
  "version": "0.0.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/NamrathaSrihari/VSCode-extension.git#feature/git-commit-fun"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Git Commit Fun Extension",
      "properties": {
        "gitCommitFun.apiKey": {
          "type": "string",
          "default": "",
          "description": "Your GIPHY API key to fetch celebration GIFs."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  }
}
